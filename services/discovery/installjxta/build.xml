<project name="Jxta-2.4-Installer">

    <property name="jxta.version" value="2.4.1"/>

    <target name="check-installed">
        <condition property="already.installed" >
			<and>
                <available file="${localRepository}/org/jxta/platform/jxta/${jxta.version}/jxta-${jxta.version}.jar"/>
                <available file="${localRepository}/org/jxta/platform/jxtaext/${jxta.version}/jxtaext-${jxta.version}.jar"/>
			</and>
        </condition>
        <condition property="maven.suffix" value="">
            <os family="unix"/>
        </condition>
        <condition property="maven.suffix" value=".bat">
            <os family="windows"/>
        </condition>
    </target>

    <target name="install-jxta" depends="check-installed" unless="already.installed">
        <mkdir dir="${basedir}/target/jxta-download/"/>
        <get src="http://download.jxta.org/build/release/jse/2.4.1/jxta-lib-2.4.1.zip"
            dest="${basedir}/target/jxta-download/jxta-lib-2.4.1.zip"
            verbose="true"
            usetimestamp="true"/>
		<unzip src="${basedir}/target/jxta-download/jxta-lib-2.4.1.zip"
               dest="${basedir}/target/jxta-download/jxta"
               overwrite="false"/>
        <exec executable="mvn${maven.suffix}" dir="${basedir}" failonerror="false">
            <arg line="install:install-file -DgroupId=org.jxta.platform  -DartifactId=jxta -Dversion=${jxta.version} -Dpackaging=jar -DgeneratePom=true -Dfile=${basedir}/target/jxta-download/jxta/jxta.jar"/>
        </exec>
        <exec executable="mvn${maven.suffix}" dir="${basedir}" failonerror="false">
            <arg line="install:install-file -DgroupId=org.jxta.platform  -DartifactId=jxtaext -Dversion=${jxta.version} -Dpackaging=jar -DgeneratePom=true -Dfile=${basedir}/target/jxta-download/jxta/jxtaext.jar"/>
        </exec>
    </target>
			
</project>
