<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.tuscany.sca</groupId>
        <artifactId>tuscany-itest</artifactId>
        <version>2.0-Beta1</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>itest-scdl</artifactId>
    <name>Apache Tuscany SCA iTest SCDL</name>

    <dependencies>
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-deployment</artifactId>
            <version>2.0-Beta1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-implementation-java</artifactId>
            <version>2.0-Beta1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-binding-jsonp</artifactId>
            <version>2.0-Beta1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-binding-rmi</artifactId>
            <version>2.0-Beta1</version>
        </dependency>                
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-binding-jms</artifactId>
            <version>2.0-Beta1</version>
        </dependency>        
    </dependencies>
    
    <build>
       <plugins>
          <!-- Copy all the dependencies so the test can verify only the expected ones get dragged in -->
          <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-dependency-plugin</artifactId>
             <executions>
                <execution>
                   <id>copy</id>
                   <phase>compile</phase>
                   <goals>
                      <goal>copy-dependencies</goal>
                   </goals>
                </execution>
             </executions>
          </plugin>
       </plugins>
  </build>

</project>
